"FROM chocobozzz/peertube:production-bullseye\n"
"\n"
"RUN apt -y update && apt install -y prosody && apt -y clean\n"
msgstr ""
"FROM chocobozzz/peertube:production-bullseye\n"
"\n"
"RUN apt -y update && apt install -y prosody && apt -y clean\n"

